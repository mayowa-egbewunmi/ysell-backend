                <constraints primaryKey="true"/>
            </column>

            <column name="organisation_id" type="BINARY(16)">
                <constraints nullable="false" />
            </column>
            <column name="discount" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="amount_paid" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(31)">
